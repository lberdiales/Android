<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/preference_categInstitucion_title">

        <EditTextPreference
            android:title="@string/preference_categInstitucion_title"
            android:key="@string/preference_categInstitucion_key"
            android:defaultValue="0"
            android:summary="@string/preference_categInstitucion_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_categTransacciones_title">

        <ListPreference
            android:title="@string/preference_categTransacciones_title"
            android:summary="@string/preference_categTransacciones_summary"
            android:key="@string/preference_categTransacciones_key"
            android:defaultValue="1"
            android:entries="@array/listTransacciones"
            android:entryValues="@array/listTransaccionesId" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_categAmbiente_title">

        <ListPreference
            android:title="@string/preference_categAmbiente_title"
            android:summary="@string/preference_categAmbiente_summary"

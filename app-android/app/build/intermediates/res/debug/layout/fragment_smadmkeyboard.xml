<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/smadmkeyboardfragment_tvTitulo_text"
        android:id="@+id/tvTitulo"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="42sp"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvDni"
        android:layout_gravity="center_horizontal"
        android:background="#ffffffff"
        android:textColor="#000000"
        android:layout_marginLeft="32sp"
        android:layout_marginRight="32sp"
        android:layout_marginTop="16sp"
        android:width="256sp"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:maxLength="8" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="32sp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn1_text"
            android:id="@+id/btn1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn2_text"
            android:id="@+id/btn2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn3_text"
            android:id="@+id/btn3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn4_text"
            android:id="@+id/btn4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn5_text"
            android:id="@+id/btn5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn6_text"
            android:id="@+id/btn6"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn7_text"
            android:id="@+id/btn7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn8_text"
            android:id="@+id/btn8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn9_text"
            android:id="@+id/btn9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btn0_text"
            android:id="@+id/btn0"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btnBorrar_text"
            android:id="@+id/btnBorrar"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginRight="32sp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btnAceptar_text"
            android:id="@+id/btnAceptar"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHidden"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smadmkeyboardfragment_btnCancelar_text"
            android:id="@+id/btnCancelar"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1" />
    </GridLayout>
</LinearLayout><!-- From: file:/home/usuario/Compartida/Android/app-android/app/src/main/res/layout/fragment_smadmkeyboard.xml -->